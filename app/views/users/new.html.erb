<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>

<%= form_for(@user, html: {class: "form-horizontal center"}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :name %>
    <div class="col-md-6">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :school %>
    <div class="col-md-6">
      <%= f.text_field :school %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :skills %>
    <div class="col-md-6">
      <%= f.collection_check_boxes(:skills, Skill.all, :id, :name) %>
    </div>
  </div>

  <%= f.submit "Sign me in", class: "btn btn-large btn-primary" %>
<% end %>
